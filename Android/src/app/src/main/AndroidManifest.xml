<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required for downloading models from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Recommended for checking network connectivity before downloads -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Required for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Note: Storage permissions (WRITE_EXTERNAL_STORAGE) are NOT required -->
    <!-- DataStore and ModelManager use internal app storage (/data/data/<package>/files/) -->
    <!-- which apps can access without any special permissions -->

    <application
        android:name="${applicationName}"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nimittam">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nimittam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
