<?xml version="1.0" encoding="utf-8"?>
<!--
  Data extraction rules for Android Auto Backup (API 31+)
  Defines what data should be included/excluded from cloud backups
  and device-to-device transfers.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="." />
        <!-- Include DataStore files -->
        <include domain="file" path="datastore/" />
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="." />
        <!-- Include DataStore files -->
        <include domain="file" path="datastore/" />
    </device-transfer>
</data-extraction-rules>
